<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.user.dao.UserRepository">
  <select id="findAll" resultType="UserDto">
    SELECT
      USER_SEQ AS id
      , USER_ID AS email
      , USER_PASSWORD AD password
    FROM USER
  </select>

  <select id="findByEmail" resultType="UserDto">
    SELECT
        USER_SEQ AS id
      , USER_ID AS email
      , USER_PASSWORD AD password
    FROM USER
    WHERE USER_ID = #{password}
  </select>

  <insert id="save" parameterType="UserDto">
    INSERT INTO USER (
      USER_ID
      ,USER_PASSWORD
      ,USER_NAME
    )
    VALUES(
      #{email}
      ,#{password}
      ,#{name}
    )
  </insert>
</mapper>